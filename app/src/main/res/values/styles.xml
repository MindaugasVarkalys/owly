<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H1">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/circular_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryText">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Card">
        <item name="android:background">#AAAAAA</item>
        <item name="android:padding">@dimen/distance_2</item>
    </style>

</resources>
