<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="H1">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/circular_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryText">
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryText">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="Card">
        <item name="android:background">@drawable/card</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="BottomNavigationBarTextAppearance">
        <item name="android:fontFamily">@font/circular_book</item>
    </style>

</resources>
